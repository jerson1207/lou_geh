<p id="notice"><%= notice %></p>
<%= link_to 'Edit', edit_company_path(@company) %> |
<%= link_to 'Back', companies_path %>

<div class="company_header">
  <h3>Campany Name: <%= @company.name %></h3>
  <h4>contact: <%= @company.contact %></h4>
  <h4>Address: <%= @company.address %></h4>
</div>

<div class="company_history">
  <table class= "table">
    <thead>
      <caption>Supply History</caption>
      <tr>
        <th>id</th>
        <th>Item id</th>
        <th>quantity</th>
        <th>Unit per price</th>
      </tr>
    </thead>
    <tbody>
    <% @supply.each do |h| %>
      <% h.items.each do |i| %> 
      <tr>
        <td><%= h.created_at.strftime('%Y-%m-%d') %> </td>
        <td><%= i.id %></td>
        <td><%= i.quantity %></td>
        <td><%= i.supply_deliver_id %></td>
      </tr>
      <% end %>
    <% end %>      
    </tbody>


  </table>
</div>


