<div class="section">
<div class="section-header">
  <h1>Inventory of Products</h1>
</div>
<table class="table">
  <thead>
    <tr>
      <th>Barcode</th>
      <th>Description</th>
      <th>Quantity</th>
    </tr>
  </thead>
  <tbody>
  <% @item_inventories.each do |i| %>
    <tr>
      <td><%= i.product.id %> </td>
      <td><%= i.product.description %></td>
      <td><%= i.quantity %> </td>
    </tr>
    <% end %>
  </tbody>
</table> 
<hr>
<div class="section-header">
  <h1>Out of Stock</h1>
</div>
<table class="table">
  <thead>
    <tr>
      <th>Barcode</th>
      <th>Description</th>
      <th>Quantity</th>
    </tr>
  </thead>
  <tbody>
  <% @oos.each do |i| %>
    <tr>
      <td><%= i.product.id %> </td>
      <td><%= i.product.description %></td>
      <td><%= i.quantity %> </td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>