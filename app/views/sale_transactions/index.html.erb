<p id="notice"><%= notice %></p>
<%= link_to 'New Sale Transaction', new_sale_transaction_path %>
<table class="table">
  <caption>Sale Transactions</caption>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Total Item(s)</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @sale_transactions.each do |sale_transaction| %>
      <tr>
        <td><%= sale_transaction.customer.name %> </td>
        <td><%= sale_transaction.sold_items.count %> </td>
      
        <td><%= link_to 'Show', sale_transaction %></td>
        <td><%= link_to 'Edit', edit_sale_transaction_path(sale_transaction) %></td>
        <td><%= link_to 'Destroy', sale_transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

