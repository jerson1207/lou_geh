<div class="section">
  <p id="notice"><%= notice %></p>
  <div class="section-header-view">
    <h2 class="title">Name: <span><%= @customer.name %></span></h2>
    <h2>Contact: <span><%= @customer.contact %></span></h2>
    <h2>Address: <span><%= @customer.address %></span></h2>
  </div>
  <table class="table">
    
    <thead>
      <tr>
        <th>Date</th>
        <th>Barcode</th>
        <th>Quantity</th>
        <th>Price Per Unit</th>
      </tr>
    </thead>
    <tbody>
    <% @transaction.each do |t| %>
      <% t.sold_items.each do |i| %>
      <tr>
        <td><%= i.created_at.strftime('%Y-%m-%d') %> </td>
        <td><%= i.product_id %> </td>
        <td><%= i.quantity %> </td>
        <td><%= i.price_per_unit %> </td>
      </tr>
      <% end %> 
    <% end %>  
    </tbody>
  </table>
</div>