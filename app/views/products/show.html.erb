<div class="section">
  <p id="notice"><%= notice %></p>
  <div class="section-header-view">
    <h2 class="title">Product Description: <span><%= @product.description %></span> </h2>
    <h2>Barcode: <%= @product.id %></h2>
  </div>
  <table class= "table">
    <thead>
      
      <tr>
        <th>Date</th>
        <th>Company</th>
        <th>quantity</th>
        <th>Unit per price</th>
      </tr>
    </thead>
    <tbody>
      <% @supplier.each do |s| %>
        <% s.items.where(product_id: @product.id).each do |i| %>
          <tr>
            <td><%= i.created_at.strftime('%Y-%m-%d') %> </td>
            <td><%= s.company_id %> </td>
            <td><%= i.quantity %></td>
            <td><%= i.unit_per_cost %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
